<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" android:dither="true">
            <solid android:color="@color/holo_darker_gray" />
            <corners android:radius="3dip" />
        </shape>
    </item>
    <item
        android:right="1dip"
        android:bottom="2dip">
        <shape android:shape="rectangle" android:dither="true">
            <solid android:color="@color/holo_blue_light" />
            <corners android:radius="3dip" />
        </shape>
    </item>
    <item
        android:right="1dip"
        android:top="8dip"
        android:bottom="2dip">
        <shape android:shape="rectangle" android:dither="true">
            <solid android:color="@color/holo_white" />
            <corners
                android:bottomLeftRadius="3dip"
                android:bottomRightRadius="3dip" />
            <padding android:bottom="5dip"
                android:left="5dip"
                android:right="5dip"
                android:top="5dip" />
        </shape>
    </item>
</layer-list>